<UserControl x:Class="WpfUI.Views.Electrical.SinlgeLineView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="clr-namespace:WpfUI.Windows"
             mc:Ignorable="d"
        
             
             xmlns:converters="clr-namespace:WpfUI.Converters"
             
             xmlns:dteqViewers="clr-namespace:WpfUI.UserControls.Viewers.Dteq"
             
             xmlns:mjeqSubViews="clr-namespace:WpfUI.Views.Electrical.MjeqSubviews"
             xmlns:singleLineSubViews="clr-namespace:WpfUI.Views.Electrical.SingleLineSubViews"
             
             xmlns:edtEqModels="clr-namespace:EDTLibrary.Models.Equipment;assembly=EDTLibrary"
             xmlns:edtDteqModels="clr-namespace:EDTLibrary.Models.DistributionEquipment;assembly=EDTLibrary"
             xmlns:edtLoadModels="clr-namespace:EDTLibrary.Models.Loads;assembly=EDTLibrary"
             xmlns:edtCables="clr-namespace:EDTLibrary.Models.Cables;assembly=EDTLibrary"
             xmlns:edtComponents="clr-namespace:EDTLibrary.Models.Components;assembly=EDTLibrary"
             
             d:Height="900" d:Width="1200"
             
             Loaded="UserControl_Loaded" 
             
             >

    <UserControl.Resources>
        <ResourceDictionary>

            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../../Styles/EdtStyle_Teal.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <converters:InvertableBooleanToVisibilityConverter x:Key="BoolToVis"/>

            <Style TargetType="TextBlock" x:Key="Label">
                <Setter Property="TextAlignment" Value="Right"/>
                <Setter Property="Margin" Value="5 5 0 0"/>
                <Setter Property="FontSize" Value="14"/>
            </Style>

            <Style TargetType="TextBlock" x:Key="Value">
                <Setter Property="TextAlignment" Value="Left"/>
                <Setter Property="Margin" Value="5 5 0 0"/>
                <Setter Property="FontSize" Value="14"/>
                <Setter Property="FontWeight" Value="SemiBold"/>
            </Style>

        </ResourceDictionary>
    </UserControl.Resources>

    <!--Main Grid-->
    <Grid Background="{StaticResource PageBackground}">

        <Grid.RowDefinitions>
            <RowDefinition Height="115"/>
            <RowDefinition Height="80"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="25"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="25"/>
            <ColumnDefinition Width="auto" MaxWidth="150"/>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="auto" MinWidth="350"/>
            <ColumnDefinition Width="25"/>
        </Grid.ColumnDefinitions>

        <!--Left Menu-->
        <StackPanel Orientation="Vertical"
                    Grid.Row="2" Grid.Column="1" >
            <TextBlock Text="Selected Equipment"
                       FontSize="16"
                       FontWeight="SemiBold"
                       Margin="0 0 0 10"/>
            

            <ListView ItemsSource="{Binding ViewableDteqList}"
                     Grid.Row="1" Grid.Column="1"
                     SelectedItem="{Binding SelectedDteq, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                     DisplayMemberPath="Tag"
                     MinWidth="100" MinHeight="100"
                     Margin="0 10" 
                     />

            <Button Content="Create Drawing"
                    Command="{Binding DrawSingleLineAcadCommand}"/>

            <TextBlock x:Name="txtMousePos"
                       Text="Mouse Pos"
                       FontSize="12"
                       FontWeight="SemiBold"
                       Margin="0 0 0 10"/>
            
            <ListView ItemsSource="{Binding SelectedLoads}"
                     Grid.Row="1" Grid.Column="1"
                     DisplayMemberPath="Tag"
                     MinWidth="100" MinHeight="100"
                     Margin="0 10" 
                     />
           
        </StackPanel>

        <!--Top Data-->
        <dteqViewers:DteqSummary3RowViewer Grid.Column="3" Grid.ColumnSpan="2"
                                           DataContext="{Binding SelectedDteq}"/>
        <!--Sinlge Line-->
        <Border BorderBrush="Black" BorderThickness="1"
                Background="White"
                Grid.Row="2" Grid.RowSpan="2"
                Grid.Column="3" Grid.ColumnSpan="2"
                VerticalAlignment="Stretch"
                CornerRadius="0" 
                >
            
            <ScrollViewer VerticalScrollBarVisibility="Auto"
                          HorizontalScrollBarVisibility="Auto"
                          VerticalAlignment="Stretch"
                          >
                <Grid x:Name="grdSingleLine"
                      Background="Transparent"
                      
                      MouseDown="Grid_MouseDown" 
                      MouseMove="Grid_MouseMove" 
                      MouseUp="Grid_MouseUp" 
                    >
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <!--Drag Selection -->
                    <Canvas x:Name="dragSelectionCanvas"
                            Visibility="Collapsed"
                            Panel.ZIndex="99">
                        <Border x:Name="dragSelectionBorder"
                                BorderBrush="Blue"
                                BorderThickness="1"
                                Background="LightBlue"
                                CornerRadius="1"
                                Opacity="0.5"
                                />
                    </Canvas>


                    
                    <singleLineSubViews:MccGraphicView DataContext="{Binding SelectedDteq}"
                                                       Width="{Binding Path=ActualWidth, ElementName=listViewLoads}"
                                                       MinWidth="250"
                                                       HorizontalAlignment="Left"
                                                       />
                    
                    <!--Change the name of this so that the MCC bus is Width = this.Width-->
                    <ItemsControl x:Name="items2"
                                  Grid.Row="1"
                                  ItemsSource="{Binding AssignedLoads}"
                                  HorizontalAlignment="Left"
                                  VerticalAlignment="Top" 
                                  Visibility="Collapsed">
                        
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <DockPanel HorizontalAlignment="Left"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                    
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                    <singleLineSubViews:SL_LoadGraphicView DataContext="{Binding}" 
                                                                           DockPanel.Dock="Left"
                                                                           LoadEquipmentSelected="LoadGraphicView_LoadEquipmentSelected"
                                                                           LoadCableSelected="LoadGraphicView_LoadCableSelected"/>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                    <!--Change the name of this so that the MCC bus is Width = this.Width-->
                    <ListView x:Name="listViewLoads"
                              Style="{DynamicResource ListViewStyle_SingleLineLoadTemplate}"
                              Grid.Row="1"
                              ItemsSource="{Binding AssignedLoads}"
                              HorizontalAlignment="Left"
                              VerticalAlignment="Top"
                              VerticalContentAlignment="Top"
                              BorderThickness="0"
                              
                              Visibility="Visible"
                              
                              SelectionChanged="ListView_SelectionChanged"
                              
                              MouseDown="Grid_MouseDown" 
                              MouseMove="Grid_MouseMove" 
                              MouseUp="Grid_MouseUp" >
                        
                        <ListView.ContextMenu>
                            <ContextMenu >
                                <MenuItem Header="Move to Area" Height="25"/>
                                <MenuItem Header="Set FedFrom" Height="20"/>
                                <MenuItem Header="Add" Height="20" >
                                    <MenuItem.Icon>
                                        <Image Source="../../ResourceFiles/MenuIcons/plus24.png"
                                           Height="10"/>
                                    </MenuItem.Icon>
                                    <MenuItem Header="Add Disconnect" Height="20" />
                                    <MenuItem Header="Add Drive" Height="20" />
                                    <MenuItem Header="Add LCS" Height="20" />
                                </MenuItem>
                                <MenuItem Header="Remove" Height="20">
                                    <MenuItem.Icon>
                                        <Image Source="../../ResourceFiles/MenuIcons/minus24.png"
                                           Height="10"/>
                                    </MenuItem.Icon>
                                    <MenuItem Header="Remove Disconnect" Height="20" />
                                    <MenuItem Header="Remove Drive" Height="20" />
                                    <MenuItem Header="Remove LCS" Height="20" />
                                </MenuItem>
                                <Separator/>
                                <MenuItem Header="Delete" Height="20" />

                            </ContextMenu>
                        </ListView.ContextMenu>
                        <ListView.Resources>
                            
                            <!--Selected Template-->
                            <ControlTemplate x:Key="SelectedTemplate" TargetType="ListViewItem">
                                <Border BorderThickness="0" Background="WhiteSmoke" 
                                        VerticalAlignment="Top"
                                        HorizontalAlignment="Left" 
                                        CornerRadius="7" 
                                        >
                                    
                                    <singleLineSubViews:SL_LoadGraphicView x:Name="ItemTemplate"
                                                                       DataContext="{Binding}" 
                                                                       LoadEquipmentSelected="LoadGraphicView_LoadEquipmentSelected"
                                                                       LoadCableSelected="LoadGraphicView_LoadCableSelected"/>
                                </Border>
                                
                            </ControlTemplate>
                            
                            <Style TargetType="ListViewItem">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        
                                        <!--Normal Template-->
                                        <ControlTemplate TargetType="ListViewItem">
                                            <Border BorderThickness="0" Background="Transparent" HorizontalAlignment="Left"  >
                                                <singleLineSubViews:SL_LoadGraphicView x:Name="ItemTemplate"
                                                                       DataContext="{Binding}" 
                                                                       LoadEquipmentSelected="LoadGraphicView_LoadEquipmentSelected"
                                                                       LoadCableSelected="LoadGraphicView_LoadCableSelected"/>
                                            </Border>
                                        </ControlTemplate>
                                        
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <MultiTrigger>
                                        <MultiTrigger.Conditions>
                                            <Condition Property="IsSelected" Value="true" />
                                        </MultiTrigger.Conditions>
                                        <Setter Property="Template" Value="{StaticResource SelectedTemplate}" />
                                    </MultiTrigger>
       
                                </Style.Triggers>
                            </Style>
                        </ListView.Resources>


                        <ListView.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel Orientation="Horizontal"
                                            Margin="0 -2 0 0"
                                            />
                            </ItemsPanelTemplate>
                        </ListView.ItemsPanel>

                    </ListView>


                </Grid>

            </ScrollViewer>
        </Border>

        <!--Property Editor-->
        <Grid  Grid.Row="2" Grid.RowSpan="2"
               Grid.Column="5"
               Margin="7 0 0 0"
               HorizontalAlignment="Stretch">
            
            <Grid.RowDefinitions>
                <RowDefinition Height="25"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <TextBlock Text="Load Details"
                           Grid.Row="0"         
                           VerticalAlignment="Bottom"
                           Margin="10 0 0 5"/>

            <Border Grid.Row="1"
                        BorderThickness="1" BorderBrush="Black" Background="{StaticResource BackgroundLight}"
                        Margin="0 0 0 5">
                <ScrollViewer HorizontalScrollBarVisibility="Auto"
                                  VerticalScrollBarVisibility="Auto">
                    <Grid Margin="5">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!--Equipment-->
                        <ContentControl Content="{Binding SelectedLoadEquipment}"
                                        Grid.Row="0"
                                            Visibility="{Binding IsSelectedLoadCable, Converter={StaticResource BoolToVis}, ConverterParameter=Inverted}">
                            <ContentControl.Resources>

                                <DataTemplate DataType="{x:Type edtDteqModels:DistributionEquipment}">
                                    <mjeqSubViews:EquipmentDetailsView/>
                                </DataTemplate>
                                
                                <DataTemplate DataType="{x:Type edtLoadModels:LoadModel}">
                                    <mjeqSubViews:EquipmentDetailsView/>
                                </DataTemplate>

                                <DataTemplate DataType="{x:Type edtComponents:ComponentModel}">
                                    <mjeqSubViews:ComponentDetailsView/>
                                </DataTemplate>

                            </ContentControl.Resources>
                        </ContentControl>

                        <!--Cable-->
                        <ContentControl Content="{Binding SelectedLoadCable}"
                                        Grid.Row="0"
                                        Visibility="{Binding IsSelectedLoadCable, Converter={StaticResource BoolToVis}, ConverterParameter=Normal}">
                            <ContentControl.Resources>

                                <DataTemplate DataType="{x:Type edtCables:CableModel}">
                                    <mjeqSubViews:CableSizingViewNarrow/>
                                </DataTemplate>
                                
                                <DataTemplate DataType="{x:Type edtDteqModels:DistributionEquipment}">
                                    <mjeqSubViews:CableSizingViewNarrow/>
                                </DataTemplate>
                                
                                <DataTemplate DataType="{x:Type edtLoadModels:LoadModel}">
                                    <mjeqSubViews:CableSizingViewNarrow/>
                                </DataTemplate>

                                <DataTemplate DataType="{x:Type edtComponents:ComponentModel}">
                                    <mjeqSubViews:CableSizingViewNarrow/>
                                </DataTemplate>

                            </ContentControl.Resources>
                        </ContentControl>

                    </Grid>
                </ScrollViewer>
            </Border>
        </Grid>
    </Grid>
</UserControl>    
