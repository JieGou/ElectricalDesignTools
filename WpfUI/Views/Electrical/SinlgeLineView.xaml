                <RowDefinition Height="auto"/>
                <RowDefinition Height="10"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>


            Tag
            <TextBlock Text="Tag:"
                       Grid.Row="1" Grid.Column="1"/>
            <TextBlock Text="{Binding SelectedDteq.Tag}" d:Text="MCC-01"
                       Grid.Row="1" Grid.Column="1"
                       Grid.ColumnSpan="3"
                       HorizontalAlignment="Left"
                       FontSize="20"
                       FontWeight="Bold"
                       Margin="10"
                       />

            Description
            <TextBlock Text="{Binding SelectedDteq.Description}"  d:Text="Ultimo MCC"
                       Grid.Row="1" Grid.Column="3"
                       Grid.ColumnSpan="3"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Center"
                       FontSize="20"
                       FontWeight="Bold"
                       Margin="30 10"
                       MinWidth="250"/>

            Area
            <TextBlock Text="Area:"
                       Grid.Row="2" Grid.Column="1"
                       Style="{StaticResource Label}"/>
            <TextBlock Text="{Binding SelectedDteq.Area.Name}"  d:Text="On Site"
                       Grid.Row="2" Grid.Column="3"
                       Style="{StaticResource Value}"  />

            Area Tag
            <TextBlock Text="Area Tag:"
                       Grid.Row="3" Grid.Column="1"
                       Style="{StaticResource Label}"/>
            <TextBlock Text="{Binding SelectedDteq.Area.Tag}"  d:Text="On Site"
                       Grid.Row="3" Grid.Column="3"
                       Style="{StaticResource Value}"  />


            Fed From
            <TextBlock Text="Fed From:" 
                       Grid.Row="4" Grid.Column="1"
                       Style="{StaticResource Label}"/>
            <TextBlock Text="{Binding SelectedDteq.FedFrom.Tag}"  d:Text="SWG-01"
                       Grid.Row="4" Grid.Column="3"
                       Style="{StaticResource Value}"  />

            SCCR
            <TextBlock Text="SCCR" 
                       Grid.Row="5" Grid.Column="1"
                       Style="{StaticResource Label}"/>
            <TextBlock Text="{Binding SelectedDteq.SCCR, StringFormat=\{0:N0\} kA}"  d:Text="SWG-01"
                       Grid.Row="5" Grid.Column="3"
                       Style="{StaticResource Value}"  />





            Column 2

            Size
            <TextBlock Text="Size:"
                       Grid.Row="2" Grid.Column="5"
                       Style="{StaticResource Label}"/>
            <StackPanel Orientation="Horizontal" 
                        Grid.Row="2" Grid.Column="7">
                <TextBlock Text="{Binding SelectedDteq.Size}"  d:Text="2000"
                           Grid.Row="4" Grid.Column="3"
                           Style="{StaticResource Value}"  />
                <TextBlock Text="{Binding SelectedDteq.Unit}" d:Text="A"
                           Style="{StaticResource Value}"  />
            </StackPanel>


            <TextBlock Text="Line Voltage:" 
                       Grid.Row="3" Grid.Column="5"
                       Style="{StaticResource Label}"/>
            <TextBlock Text="{Binding SelectedDteq.LineVoltage, StringFormat=\{0:N0\} V}"  d:Text="600 V"
                       Grid.Row="3" Grid.Column="7"
                       Style="{StaticResource Value}"  />

            <TextBlock Text="SCCA:" 
                       Grid.Row="4" Grid.Column="5"
                       Style="{StaticResource Label}"/>
            <TextBlock Text="{Binding SelectedDteq.SCCR, StringFormat=\{0:N0\} kA}"  d:Text="45 kA"
                       Grid.Row="4" Grid.Column="7"
                       Style="{StaticResource Value}"  />

            Column 3

            Size
            <TextBlock Text="Running Amps:"
                       Grid.Row="2" Grid.Column="9"
                       Style="{StaticResource Label}"/>
            <TextBlock Text="{Binding SelectedDteq.RunningAmps, StringFormat=\{0:N1\} A}"  d:Text="2000"
                        Grid.Row="2" Grid.Column="11"
                        Style="{StaticResource Value}"  />


            <TextBlock Text="Available Amps:"
                       Grid.Row="3" Grid.Column="9"
                       Style="{StaticResource Label}"/>
            <TextBlock Text="{Binding SelectedDteq.Size, StringFormat=\{0:N0\} A}"  d:Text="2000 "
                        Grid.Row="3" Grid.Column="11"
                        Style="{StaticResource Value}"  />

            <TextBlock Text="Percent Loaded:" 
                       Grid.Row="4" Grid.Column="9"
                       Style="{StaticResource Label}"/>
            <TextBlock Text="{Binding SelectedDteq.PercentLoaded, StringFormat=\{0:N0\} %}"  d:Text="575 V"
                       Grid.Row="4" Grid.Column="11"
                       Style="{StaticResource Value}"  />
        </Grid>-->

        <!--Sinlge Line-->
        <Border BorderBrush="Black" BorderThickness="1"
                Background="White"
                Grid.Row="2" Grid.RowSpan="2"
                Grid.Column="3" Grid.ColumnSpan="2"
                VerticalAlignment="Stretch"
                CornerRadius="0" 
                >
            <ScrollViewer VerticalScrollBarVisibility="Auto"
                          HorizontalScrollBarVisibility="Auto"
                          VerticalAlignment="Stretch"
                          Padding="10">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <singleLineSubViews:MccGraphicView DataContext="{Binding SelectedDteq}"
                                                       Grid.Row="0"
                                                       Width="{Binding Path=ActualWidth, ElementName=items}"
                                                       HorizontalAlignment="Left"/>

                    <ItemsControl x:Name="items"
                                  Grid.Row="1"
                                  ItemsSource="{Binding AssignedLoads}"
                                  HorizontalAlignment="Left"
                                  VerticalAlignment="Top" 
                                  >
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <DockPanel HorizontalAlignment="Left"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                               
                                    <singleLineSubViews:SL_LoadGraphicView DataContext="{Binding}" 
                                                                           DockPanel.Dock="Left"
                                                                           LoadEquipmentSelected="LoadGraphicView_LoadEquipmentSelected"
                                                                           LoadCableSelected="LoadGraphicView_LoadCableSelected"/>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                    
                    
                </Grid>

            </ScrollViewer>
        </Border>

        <!--LoadDetailsContent-->
        <Grid  Grid.Row="2" Grid.RowSpan="2"
               Grid.Column="5"
               Margin="7 0 0 0"
               HorizontalAlignment="Stretch">
            
            <Grid.RowDefinitions>
                <RowDefinition Height="25"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <TextBlock Text="Load Details"
                           Grid.Row="0"         
                           VerticalAlignment="Bottom"
                           Margin="10 0 0 5"/>

            <Border Grid.Row="1"
                        BorderThickness="1" BorderBrush="Black" Background="{StaticResource BackgroundLight}"
                        Margin="0 0 0 5">
                <ScrollViewer HorizontalScrollBarVisibility="Auto"
                                  VerticalScrollBarVisibility="Auto">
                    <Grid Margin="5">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!--Equipment-->
                        <ContentControl Content="{Binding SelectedLoadEquipment}"
                                        Grid.Row="0"
                                            Visibility="{Binding IsSelectedLoadCable, Converter={StaticResource BoolToVis}, ConverterParameter=Inverted}">
                            <ContentControl.Resources>

                                <DataTemplate DataType="{x:Type edtDteqModels:DistributionEquipment}">
                                    <mjeqSubViews:EquipmentDetailsView/>
                                </DataTemplate>
                                
                                <DataTemplate DataType="{x:Type edtLoadModels:LoadModel}">
                                    <mjeqSubViews:EquipmentDetailsView/>
                                </DataTemplate>

                                <DataTemplate DataType="{x:Type edtComponents:ComponentModel}">
                                    <mjeqSubViews:ComponentDetailsView/>
                                </DataTemplate>

                            </ContentControl.Resources>
                        </ContentControl>

                        <!--Cable-->
                        <ContentControl Content="{Binding SelectedLoadCable}"
                                        Grid.Row="0"
                                        Visibility="{Binding IsSelectedLoadCable, Converter={StaticResource BoolToVis}, ConverterParameter=Normal}">
                            <ContentControl.Resources>

                                <DataTemplate DataType="{x:Type edtDteqModels:DistributionEquipment}">
                                    <mjeqSubViews:CableSizingViewNarrow/>
                                </DataTemplate>
                                
                                <DataTemplate DataType="{x:Type edtLoadModels:LoadModel}">
                                    <mjeqSubViews:CableSizingViewNarrow/>
                                </DataTemplate>

                                <DataTemplate DataType="{x:Type edtComponents:ComponentModel}">
                                    <mjeqSubViews:CableSizingViewNarrow/>
                                </DataTemplate>

                            </ContentControl.Resources>
                        </ContentControl>

                    </Grid>
                </ScrollViewer>
            </Border>
        </Grid>
    </Grid>
</UserControl>    
