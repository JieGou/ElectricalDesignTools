                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" >
                <StackPanel x:Name="stackPanel"
                                    Orientation="Vertical"
                                    Grid.Column="0"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Top"
                                    Background="Transparent"
                                    Margin="0 15 0 15">

                    <!--Tag-->
                    <TextBlock Text="{Binding PowerCable.Tag}"
                               FontWeight="SemiBold"
                               Visibility="Visible"/>

                    <!--Cable Size-->
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{Binding PowerCable.QtyParallel}" />
                        <TextBlock Text="x #" Margin="0"/>

                        <TextBlock Text="{Binding PowerCable.Size}" />
                    </StackPanel>

                    <!--Cable Type-->
                    <TextBlock Text="{Binding PowerCable.Type}" />
                </StackPanel>
            </Border>
            <Image Source="..\..\ResourceFiles\ErrorIcon48.png"
                           Grid.Column="1" HorizontalAlignment="Left"
                           Height="13"
                           Margin="5"
                           VerticalAlignment="Center"
                           Visibility="{Binding PowerCable.IsValidSize, Converter={StaticResource BoolToVisInvert}, ConverterParameter=Inverted}"/>
        </Grid>
    </DataTemplate>


    <!--LOADS-->
    <!--Motor Template-->
    <DataTemplate x:Key="MotorTemplate" DataType="{x:Type edtLoadModels:LoadModel}">
        <Grid Style="{StaticResource GraphicHighlightStyle}">

            <StackPanel Orientation="Horizontal">

                <!--Graphic-->
                <Border BorderThickness="2" 
                        Width="50"
                        Height="50"
                        CornerRadius="50"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top">
                    
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" 
                                VerticalAlignment="Center">
                        <TextBlock Text="{Binding Size}" HorizontalAlignment="Center"/>
                        <TextBlock Text=" " HorizontalAlignment="Center"/>
                        <TextBlock Text="{Binding Unit}" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>
                
                <!--Text-->
                <Border BorderThickness="0" 
                        HorizontalAlignment="Left"
                        >
                    <StackPanel Orientation="Vertical"
                                HorizontalAlignment="Left" 
                                VerticalAlignment="Center"
                                Margin="10 0 0 0">
                        <TextBox Text="{Binding Tag, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                                 HorizontalAlignment="Left"
                                 Background="Transparent"
                                 BorderBrush="LightGray"
                                 FontWeight="SemiBold"
                                 />
                        <TextBlock Text="{Binding Description}" HorizontalAlignment="Left"
                                   MaxWidth="140"
                                   TextWrapping="WrapWithOverflow"/>
                    </StackPanel>


                </Border>
            </StackPanel>

        </Grid>

    </DataTemplate>

    <!--Heater Template-->
    <DataTemplate x:Key="HeaterTemplate" DataType="{x:Type edtLoadModels:LoadModel}">
        <Grid Style="{StaticResource GraphicHighlightStyle}">

            <StackPanel Orientation="Horizontal">

                <!--Graphic-->
                <Border BorderThickness="2" 
                        Width="50"
                        Height="50"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top">
                    
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" 
                                VerticalAlignment="Center">
                        <TextBlock Text="{Binding Size}" HorizontalAlignment="Center"/>
                        <TextBlock Text=" " HorizontalAlignment="Center"/>
                        <TextBlock Text="{Binding Unit}" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>

                <!--Text-->
                <Border BorderThickness="0" 
                        HorizontalAlignment="Left"
                        >
                    <StackPanel Orientation="Vertical"
                                HorizontalAlignment="Right" 
                                VerticalAlignment="Center"
                                Margin="10 0 0 0">
                        <TextBox Text="{Binding Tag, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                                 HorizontalAlignment="Left"
                                 Background="Transparent"
                                 BorderBrush="LightGray"
                                 FontWeight="SemiBold"
                                 />
                        <TextBlock Text="{Binding Description}" HorizontalAlignment="Left"
                                   MaxWidth="130"
                                   TextWrapping="WrapWithOverflow"/>
                    </StackPanel>


                </Border>
            </StackPanel>

        </Grid>
    </DataTemplate>


    <templateSelectors:LoadGraphicTemplateSelector 
                x:Key="NoTransformerLoadGraphicTemplateSelector"
                MotorTemplate="{StaticResource MotorTemplate}"
                HeaterTemplate="{StaticResource HeaterTemplate}" 
                PanelTemplate="{StaticResource HeaterTemplate}" 
                OtherTemplate="{StaticResource HeaterTemplate}" 
        />
    
    <!--Transformer Template-->
    <DataTemplate x:Key="TransformerTemplate" DataType="{x:Type edtDteqModels:XfrModel}">
        <Grid Style="{StaticResource GraphicHighlightStyle}">

            <Grid >
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="auto"/>
                </Grid.ColumnDefinitions>

                <!--Transformer Graphic-->
                <Border Margin="-5 0">
                <Canvas Grid.Row="0"
                    Grid.Column="0" 
                        VerticalAlignment="Top"
                        HorizontalAlignment="Left"
                    Width="50" Height="65"
                    Margin="0 0 0 0">

                    <Line Stroke="Black" StrokeThickness="1" X1="30" Y1="0" X2="30" Y2="17"/>

                    <Path Stroke="Black" StrokeThickness="1" Data="M 0,17 A 5, 5 0 0 0 15, 17" />
                    <Path Stroke="Black" StrokeThickness="1" Data="M 15,17 A 4, 4 0 0 0 30, 17" />
                    <Path Stroke="Black" StrokeThickness="1" Data="M 30,17 A 4, 4 0 0 0 45, 17" />
                    <Path Stroke="Black" StrokeThickness="1" Data="M 45,17 A 4, 4 0 0 0 60, 17" />

                    <Line Stroke="Black" StrokeThickness="1.5" X1="0" Y1="30" X2="60" Y2="30"/>
                    <Line Stroke="Black" StrokeThickness="1.5" X1="0" Y1="37" X2="60" Y2="37"/>

                    <Path Stroke="Black" StrokeThickness="1" Data="M 0,50 A 4, 4 0 0 1 15, 50" />
                    <Path Stroke="Black" StrokeThickness="1" Data="M 15,50 A 4, 4 0 0 1 30, 50" />
                    <Path Stroke="Black" StrokeThickness="1" Data="M 30,50 A 4, 4 0 0 1 45, 50" />
                    <Path Stroke="Black" StrokeThickness="1" Data="M 45,50 A 4, 4 0 0 1 60, 50" />

                    <Line Stroke="Black" StrokeThickness="1" X1="30" Y1="50" X2="30" Y2="65"/>
                </Canvas>
                </Border>
                <!--Trasnformer Data-->
                <Border BorderThickness="0" 
                        Grid.Row="0" Grid.RowSpan="2"
                        Grid.Column="1"
                        HorizontalAlignment="Left"
                        Margin="5 0"
                        >
                    <StackPanel Orientation="Vertical"
                                HorizontalAlignment="Right" 
                                VerticalAlignment="Center"
                                Margin="15 0 0 0">

                        <TextBox Text="{Binding Tag, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                                 HorizontalAlignment="Left"
                                 Background="Transparent"
                                 BorderBrush="LightGray"
                                 FontWeight="SemiBold"
                                 />
                        <TextBlock Text="{Binding Description}" HorizontalAlignment="Left"
                                   MaxWidth="130"
                                   TextWrapping="WrapWithOverflow"/>

                        <!--Extra Details-->
                        <StackPanel x:Name="extraDetails"
                            Orientation="Vertical"
                            Grid.Row="1" 
                            Grid.Column="1"
                            >
                            <!--Size-->
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" 
                                VerticalAlignment="Center">
                                <TextBlock Text="{Binding Size}" HorizontalAlignment="Left"/>
                                <TextBlock Text=" " HorizontalAlignment="Center"/>
                                <TextBlock Text="{Binding Unit}" HorizontalAlignment="Left"/>
                            </StackPanel>

                            <!--Voltage-->
                            <TextBlock Text="{Binding LineVoltage, StringFormat={}{0:N0} V}" HorizontalAlignment="Left" TextDecorations="Underline"/>
                            <TextBlock Text="{Binding LoadVoltage, StringFormat={}{0:N0} V}" HorizontalAlignment="Left"/>

                            <!--Area Tag-->
                            <TextBlock Text="{Binding Area.Tag}"
                               FontWeight="SemiBold"
                               Margin="5 0 0 0"
                               Visibility="Collapsed"/>
                            <!--Area Properties-->
                            <StackPanel Orientation="Horizontal" 
                                Visibility="Collapsed">
                                <TextBlock Text="" Margin="5 0 0 0"/>
                                <TextBlock Text="{Binding NemaRating}"/>
                                <TextBlock Text=", " Margin="0 0 0 0"/>
                                <TextBlock Text="{Binding AreaClassification}" />
                            </StackPanel>
                        </StackPanel>

                    </StackPanel>
                </Border>

                
                
                <Border BorderThickness="0 0 1 0" HorizontalAlignment="Center"
                        Grid.Row="1" 
                        Grid.Column="0"
                        Margin="10 0 0 0"
                        Height="{Binding ActualHeight, ElementName=extraDetails}">
                </Border>
                
                <StackPanel Orientation="Vertical"
                            Grid.Row="2" 
                            Grid.Column="0" Grid.ColumnSpan="2">
                    
                <!--Transformer Load-->
                <!--Cable-->
                <Grid Margin="-15 0 0 0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="40"/>
                        <ColumnDefinition Width="5"/>
                        <ColumnDefinition Width="auto"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                    </Grid.RowDefinitions>

                    <!--Cable Line-->
                    <Border BorderBrush="Black" BorderThickness="0 0 1 0"
                                       Grid.Column="0"/>
                    <!--Cable Tag-->
                    <ContentControl Content="{Binding}"
                                    ContentTemplate="{StaticResource CableTemplate}"
                                    Grid.Column="2" 
                                    >
                    </ContentControl>
                </Grid>

                <!--Load-->
                <Grid Margin="-15 0 0 0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="15"/>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Orientation="Vertical" Grid.Column="1"
                            HorizontalAlignment="Left">

                        <ContentControl Content="{Binding AssignedLoads[0]}" 
                                    ContentTemplateSelector="{StaticResource NoTransformerLoadGraphicTemplateSelector}"
                                    >

                        </ContentControl>
                    </StackPanel>
                </Grid>
                </StackPanel>
            </Grid>

        </Grid>
    </DataTemplate>

    <!--TEMPLATE STYLES-->
    
    <!--OCPDTemplateStyle-->
    <Style x:Key="OCPDTemplateStyle" TargetType="{x:Type ContentControl}">
        <Style.Triggers>
            <DataTrigger Binding="{Binding Path=Type}" Value="BKR">
                <Setter Property="ContentTemplate" Value="{StaticResource BreakerTemplate}"/>
            </DataTrigger>
            <DataTrigger Binding="{Binding Path=PdType}" Value="MCP-FVNR">
                <Setter Property="ContentTemplate" Value="{StaticResource FvnrTemplate}"/>
            </DataTrigger>
            <DataTrigger Binding="{Binding Path=PdType}" Value="MCP-FVR">
                <Setter Property="ContentTemplate" Value="{StaticResource FvrTemplate}"/>
            </DataTrigger>
            <DataTrigger Binding="{Binding Path=PdType}" Value="FDS">
                <Setter Property="ContentTemplate" Value="{StaticResource FdsSplitterTemplate}"/>
            </DataTrigger>
        </Style.Triggers>
    </Style>


    <!--DisconnectTemplateStyle-->
    <Style x:Key="DisconnectTemplateStyle" TargetType="{x:Type ContentControl}">
        <Style.Triggers>
            <DataTrigger Binding="{Binding Path=Type}" Value="UDS">
                <Setter Property="ContentTemplate" Value="{StaticResource UdsTemplate}"/>
            </DataTrigger>
            <DataTrigger Binding="{Binding Path=Type}" Value="FDS">
                <Setter Property="ContentTemplate" Value="{StaticResource FdsTemplate}"/>
            </DataTrigger>
        </Style.Triggers>
    </Style>
    
    <templateSelectors:PdStarterGraphicTemplateSelector 
                x:Key="PdStarterTemplateSelector"
                BreakerTemplate="{StaticResource BreakerTemplate}" 
                FvnrTemplate="{StaticResource FvnrTemplate}"
                FvrTemplate="{StaticResource FvrTemplate}"
                FdsTemplate="{StaticResource FdsTemplate}" 
        />

    <templateSelectors:ComponentGraphicTemplateSelector 
                x:Key="ComponentTemplateSelector"
                UdsTemplate="{StaticResource UdsTemplate}"
                FdsTemplate="{StaticResource FdsTemplate}" 
                VsdTemplate="{StaticResource VsdTemplate}" />

    <templateSelectors:LoadGraphicTemplateSelector 
                x:Key="LoadTemplateSelector"
                MotorTemplate="{StaticResource MotorTemplate}"
                HeaterTemplate="{StaticResource HeaterTemplate}" 
                TransformerTemplate="{StaticResource TransformerTemplate}" 
                PanelTemplate="{StaticResource HeaterTemplate}" 
                OtherTemplate="{StaticResource HeaterTemplate}" 
        />
    <!--#endregion-->


</ResourceDictionary>