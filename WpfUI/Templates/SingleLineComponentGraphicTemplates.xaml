                    </Border>

                </Grid>
                <SingleLineLoadGraphics:SingleLineDashedBorder Grid.Column="0" Grid.ColumnSpan="5" Margin="0 -1 0 0"/>
            </Grid>

        </StackPanel>
    </DataTemplate>

    <!--DISCONNECT-->
    <!--Uds-->
    <DataTemplate x:Key="UdsTemplate">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="{StaticResource LcsColumnWidth}"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid Style="{StaticResource GraphicHighlightStyle}"
                  Grid.Column="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="18.5"/>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>

                <!--Graphic-->
                <Border BorderThickness="1" HorizontalAlignment="Center"
                    Grid.Row="0" Grid.Column="1"
                    Width="40" Height="55"
                    >
                    <Canvas Grid.Column="1" Width="50" Height="55">
                        <Line X1="20" X2="20" Y1="0" Y2="15"
                                  Stroke="Black" StrokeThickness="1"/>
                        <Line X1="10" X2="20" Y1="15" Y2="35"
                                  Stroke="Black" StrokeThickness="1"/>
                        <Line X1="20" X2="20" Y1="35" Y2="55"
                                  Stroke="Black" StrokeThickness="1"/>
                    </Canvas>
                </Border>

                <!--Data-->
                <Border Grid.Row="0" Grid.Column="2"
                    Grid.RowSpan="2"
                    CornerRadius="{StaticResource BorderHighlightCornerRadius}"
                    Padding="0 0 5 0">
                    <StackPanel Orientation="Vertical"
                            VerticalAlignment="Top">
                        <TextBlock Text="{Binding Tag}"
                                FontWeight="SemiBold"
                                Grid.Column="2"
                                Margin="5 0 0 0"/>
                        <TextBlock Text="{Binding FrameAmps, StringFormat={}{0:N0} A}"
                                Grid.Column="2"
                                Margin="5 0 0 0"/>
                        <!--Area Properties-->
                        <StackPanel Orientation="Horizontal" 
                                Visibility="Visible">
                            <TextBlock Text="" Margin="5 0 0 0"/>
                            <TextBlock Text="{Binding NemaRating}"/>
                            <TextBlock Text=", " Margin="0 0 0 0"/>
                            <TextBlock Text="{Binding AreaClassification}" />
                        </StackPanel>

                        <!--Extra Details-->
                        <StackPanel x:Name="extraDetails"
                                Orientation="Vertical">
                            <!--Area Tag-->
                            <TextBlock Text="{Binding Area.Tag}"
                                   FontWeight="SemiBold"
                                   Grid.Column="2"
                                   Margin="5 0 0 0"
                                   Visibility="Collapsed"/>
                            <!--Area Properties-->
                            <StackPanel Orientation="Horizontal" 
                                    Visibility="Collapsed">
                                <TextBlock Text="" Margin="5 0 0 0"/>
                                <TextBlock Text="{Binding NemaRating}"/>
                                <TextBlock Text=", " Margin="0 0 0 0"/>
                                <TextBlock Text="{Binding AreaClassification}" />
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!--Extension of Cable for Extra Data-->
                <Border BorderThickness="0 0 1 0" HorizontalAlignment="Center"
                    Grid.Row="2" Grid.Column="1"
                    Margin="1 0 0 0"
                    Height="{Binding ActualHeight, ElementName=extraDetails}">
                </Border>
            </Grid>
        </Grid>
    </DataTemplate>

    <!--Fds-->
    <DataTemplate x:Key="FdsTemplate_Bucket">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="{StaticResource LcsColumnWidth}"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid Style="{StaticResource GraphicHighlightStyle}"
                  Grid.Column="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="18.5"/>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>

                <!--Graphic-->
                <Border BorderThickness="0" HorizontalAlignment="Center"
                    Grid.Row="0" Grid.Column="1"
                    Width="40" Height="91">

                    <Canvas Grid.Column="1" Width="50" Height="55"
                            Margin="1 10 0 0">
                        <Line X1="20" X2="20" Y1="-25" Y2="5"
                          Stroke="Black" StrokeThickness="1"/>
                        <Line X1="10" X2="20" Y1="7.5" Y2="18"
                          Stroke="Black" StrokeThickness="1"/>
                        <Line X1="20" X2="20" Y1="18" Y2="25"
                          Stroke="Black" StrokeThickness="1"/>
                        <Rectangle Width="10.5" Height="20"
                                Canvas.Left="14.5" Canvas.Top="25"
                                Stroke="Black" StrokeThickness="1"/>
                        <Line X1="20" X2="20" Y1="45" Y2="90"
                          Stroke="Black" StrokeThickness="1"/>
                    </Canvas>
                </Border>

                <!--Data-->
                <Border Grid.Row="0" Grid.Column="2"
                    Grid.RowSpan="2"
                        Margin="0 30 0 0"
                    CornerRadius="{StaticResource BorderHighlightCornerRadius}"
                    Padding="0 0 5 0">
                    <StackPanel Orientation="Vertical"
                            VerticalAlignment="Top">
                        
                        <StackPanel Orientation="Vertical">
                            <Border BorderBrush="Black" BorderThickness="0 0 0 1"
                                    Background="Transparent">
                                <TextBlock Text="{Binding TripAmps, StringFormat={}{0:N0} AT}"
                                           TextAlignment="Right"
                                           Margin="0 0 0 0"/>
                            </Border>

                            <TextBlock Text="{Binding FrameAmps, StringFormat={}{0:N0} AF}"
                                       Margin="0 0 0 0"
                                       TextAlignment="Right"/>
                           
                        </StackPanel>
                        <!--Area Properties-->
                        <StackPanel Orientation="Horizontal" 
                                Visibility="Collapsed">
                            <TextBlock Text="" Margin="5 0 0 0"/>
                            <TextBlock Text="{Binding NemaRating}"/>
                            <TextBlock Text=", " Margin="0 0 0 0"/>
                            <TextBlock Text="{Binding AreaClassification}" />
                        </StackPanel>

                        <!--Extra Details-->
                        <StackPanel x:Name="extraDetails"
                                Orientation="Vertical">
                            <!--Area Tag-->
                            <TextBlock Text="{Binding Area.Tag}"
                                   FontWeight="SemiBold"
                                   Margin="5 0 0 0"
                                   Visibility="Collapsed"/>
                            <!--Area Properties-->
                            <StackPanel Orientation="Horizontal" 
                                    Visibility="Collapsed">
                                <TextBlock Text="" Margin="5 0 0 0"/>
                                <TextBlock Text="{Binding NemaRating}"/>
                                <TextBlock Text=", " Margin="0 0 0 0"/>
                                <TextBlock Text="{Binding AreaClassification}" />
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>
                </Border>
                <Border BorderThickness="0 0 1 0" HorizontalAlignment="Center"
                    Grid.Row="2" Grid.Column="1"
                    Margin="2 0 1 0"
                    Height="{Binding ActualHeight, ElementName=extraDetails}">
                </Border>
            </Grid>
            <SingleLineLoadGraphics:SingleLineDashedBorder Grid.Column="0" Grid.ColumnSpan="5" Margin="0 1 0 0"/>

        </Grid>

    </DataTemplate>

    <!--Fds Stand Alone Template-->
    <DataTemplate x:Key="FdsTemplate_StandAlone">
        <StackPanel
            SnapsToDevicePixels="true">


            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="{StaticResource LcsColumnWidth}"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Grid Style="{StaticResource GraphicHighlightStyle}"
                  Grid.Column="1"
                  SnapsToDevicePixels="True">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="18.5"/>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                    </Grid.RowDefinitions>


                    <Line Grid.Row="0" Grid.Column="1"
                      X1="21.5" X2="21.5" Y1="0" Y2="11"
                      Stroke="Black" StrokeThickness="1"
                          UseLayoutRounding="True"/>

                    <Border BorderThickness="1" HorizontalAlignment="Center"
                        Grid.Row="1" Grid.Column="1"
                        Width="40" Height="60">

                        <Canvas Grid.Column="1" Width="50" Height="60">

                            <Line X1="20" X2="20" Y1="0" Y2="12.5"
                              Stroke="Black" StrokeThickness="1"/>
                            <Line X1="10" X2="20" Y1="12.5" Y2="23"
                              Stroke="Black" StrokeThickness="1"/>
                            <Line X1="20" X2="20" Y1="23" Y2="30"
                              Stroke="Black" StrokeThickness="1"/>
                            <Rectangle Width="10.5" Height="20"
                                    Canvas.Left="14.5" Canvas.Top="30"
                                    Stroke="Black" StrokeThickness="1"/>
                            <Line X1="20" X2="20" Y1="50" Y2="75"
                              Stroke="Black" StrokeThickness="1"/>
                        </Canvas>
                    </Border>



                    <Border Grid.Row="1" Grid.Column="2"
                        Grid.RowSpan="2">
                        <StackPanel Orientation="Vertical"
                                VerticalAlignment="Top">
                            <TextBlock Text="{Binding Tag}" FontWeight="SemiBold" Margin="5 0 0 0"
                                   Visibility="Visible"/>
                            <StackPanel Orientation="Horizontal" Grid.Row="1" Margin="5 0 0 0">
                                <TextBlock Text="{Binding TripAmps, StringFormat={}{0:N0} AT}" />
                                <TextBlock Text=" / " />
                                <TextBlock Text="{Binding FrameAmps, StringFormat={}{0:N0} AF}" />
                            </StackPanel>
                            <!--Area Properties-->
                            <StackPanel Orientation="Horizontal" 
                                    Visibility="Visible">
                                <TextBlock Text="" Margin="5 0 0 0"/>
                                <TextBlock Text="{Binding NemaRating}"/>
                                <TextBlock Text=", " Margin="0 0 0 0"/>
                                <TextBlock Text="{Binding AreaClassification}" />
                            </StackPanel>


                            <!--Extra Details-->
                            <StackPanel x:Name="extraDetails"
                                    Orientation="Vertical">
                                <!--Area Tag-->
                                <TextBlock Text="{Binding Area.Tag}"
                                       FontWeight="SemiBold"
                                       Margin="5 0 0 0"
                                       Visibility="Collapsed"/>
                                <!--Area Properties-->
                                <StackPanel Orientation="Horizontal" 
                                        Visibility="Collapsed">
                                    <TextBlock Text="" Margin="5 0 0 0"/>
                                    <TextBlock Text="{Binding NemaRating}"/>
                                    <TextBlock Text=", " Margin="0 0 0 0"/>
                                    <TextBlock Text="{Binding AreaClassification}" />
                                </StackPanel>
                            </StackPanel>


                        </StackPanel>
                    </Border>

                    <Border BorderThickness="0 0 1 0" HorizontalAlignment="Center"
                        Grid.Row="3" Grid.Column="1"
                        Margin="2 0 1 0"
                        Height="{Binding ActualHeight, ElementName=extraDetails}">
                    </Border>

                </Grid>


                <Line Grid.Row="0" Grid.Column="1"
                      X1="39.5" X2="39.5" Y1="75" Y2="91"
                      Stroke="Black" StrokeThickness="1"/>

                <!--Dashed Border-->

            </Grid>


        </StackPanel>
    </DataTemplate>

    
    
    
    

    <templateSelectors:DteqOCPDTemplateSelector 
                x:Key="DteqOCPDTemplateSelector"
                BreakerTemplate="{StaticResource BreakerTemplate}" />
    
    <!--Pd Starter Template Styles / Selector-->
    <!--ContentControl-->
    <Style x:Key="PdStarterTemplateStyle" TargetType="{x:Type ContentControl}">
        <Setter Property="Visibility" Value="Visible"/>
        <Style.Triggers>

            <MultiDataTrigger>
                <MultiDataTrigger.Conditions>
                    <Condition Binding="{Binding Path=Type}" Value="BKR" />
                    <Condition Binding="{Binding FedFrom}" Value="{x:Type edtDteqModels:XfrModel}" />
                </MultiDataTrigger.Conditions>
                <MultiDataTrigger.Setters>
                    <Setter Property="ContentTemplate" Value="{StaticResource BreakerTemplate}"/>
                </MultiDataTrigger.Setters>

            </MultiDataTrigger>


            <!--<DataTrigger Binding="{Binding IsStandAlone}" Value="true">
                <Setter Property="Visibility" Value="Collapsed"/>
            </DataTrigger>-->

            <DataTrigger Binding="{Binding Path=Type}" Value="MCP_FVNR">
                <Setter Property="ContentTemplate" Value="{StaticResource DOLStarterTemplate_Bucket}"/>
            </DataTrigger>
            
        </Style.Triggers>
    </Style>

    <Style x:Key="PdStarterTemplateStyle_CP" TargetType="{x:Type ContentPresenter}">
        <Setter Property="Visibility" Value="Visible"/>
        <Style.Triggers>

            <MultiDataTrigger>
                <MultiDataTrigger.Conditions>
                    <Condition Binding="{Binding Path=Type}" Value="BKR" />
                    <Condition Binding="{Binding Owner.FedFrom}" Value="{x:Type edtDteqModels:XfrModel}" />
                </MultiDataTrigger.Conditions>
                <MultiDataTrigger.Setters>
                    <Setter Property="ContentTemplate" Value="{StaticResource EmptyTemplate}"/>
                </MultiDataTrigger.Setters>
            </MultiDataTrigger>


            <DataTrigger Binding="{Binding IsStandAlone}" Value="true">
                <Setter Property="Visibility" Value="Collapsed"/>
            </DataTrigger>
            
            <DataTrigger Binding="{Binding IsStandAlone}" Value="false">
                <Setter Property="Visibility" Value="Visible"/>
            </DataTrigger>
            
            <DataTrigger Binding="{Binding Path=Type}" Value="MCP_FVNR">
                <Setter Property="ContentTemplate" Value="{StaticResource DOLStarterTemplate_Bucket}"/>
            </DataTrigger>

            <DataTrigger Binding="{Binding Path=Category}" Value="ProtectionDevice">
                <Setter Property="ContentTemplate" Value="{StaticResource VsdTemplate_Bucket}"/>
            </DataTrigger>

            <DataTrigger Binding="{Binding Path=Type}" Value="FDS">
                <Setter Property="ContentTemplate" Value="{StaticResource FdsTemplate_Bucket}"/>
            </DataTrigger>

        </Style.Triggers>
    </Style>
    
    <templateSelectors:PdStarterGraphicTemplateSelector 
            x:Key="PdStarterTemplateSelector"
            EmptyTemplate="{StaticResource EmptyTemplate}" 
            BreakerTemplate="{StaticResource BreakerTemplate_Bucket}"
        
            DolTemplate="{StaticResource DOLStarterTemplate_Bucket}"
            DolTemplate_StandAlone="{StaticResource DOLStarterTemplate_StandAlone}"
        
            VsdTemplate="{StaticResource VsdTemplate_Bucket}"
        
            FdsTemplate="{StaticResource FdsTemplate_Bucket}" 
            FdsTemplate_StandAlone="{StaticResource FdsTemplate_StandAlone}" 
    />

    <!--Component Template Style / Selector-->
    <Style x:Key="ComponentTemplateStyle" TargetType="{x:Type ContentControl}">
        <Style.Triggers>

            <DataTrigger Binding="{Binding Path=Type}" Value="UDS">
                <Setter Property="ContentTemplate" Value="{StaticResource UdsTemplate}"/>
            </DataTrigger>

            <DataTrigger Binding="{Binding Path=Type}" Value="FDS">
                <Setter Property="ContentTemplate" Value="{StaticResource FdsTemplate}"/>
            </DataTrigger>
        </Style.Triggers>
    </Style>

    <Style x:Key="ComponentTemplateStyle_CP" TargetType="{x:Type ContentPresenter}">
        <Style.Triggers>

            <DataTrigger Binding="{Binding Path=Type}" Value="UDS">
                <Setter Property="ContentTemplate" Value="{StaticResource UdsTemplate}"/>
            </DataTrigger>

            <DataTrigger Binding="{Binding Path=Type}" Value="FDS">
                <Setter Property="ContentTemplate" Value="{StaticResource FdsTemplate_StandAlone}"/>
            </DataTrigger>

            <DataTrigger Binding="{Binding Path=Type}" Value="VSD">
                <Setter Property="ContentTemplate" Value="{StaticResource VsdTemplate}"/>
            </DataTrigger>

        </Style.Triggers>
    </Style>
    
    <templateSelectors:ComponentGraphicTemplateSelector 
                x:Key="ComponentTemplateSelector"
                UdsTemplate="{StaticResource UdsTemplate}"
                FdsTemplate="{StaticResource FdsTemplate_Bucket}" 
                VsdTemplate="{StaticResource VsdTemplate}"
        
                DolTemplate_StandAlone="{StaticResource DOLStarterTemplate_StandAlone}"
                FdsTemplate_StandAlone="{StaticResource FdsTemplate_StandAlone}"
                />  

    <!--#endregion-->


</ResourceDictionary>