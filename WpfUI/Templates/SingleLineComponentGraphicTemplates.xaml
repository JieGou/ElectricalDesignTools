    <!--DOL Starter Template-->
    <DataTemplate x:Key="DOLStarterTemplate">
        <StackPanel Orientation="Vertical" >
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="{StaticResource LcsColumnWidth}"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Grid Style="{StaticResource GraphicHighlightStyle}"
                  Grid.Column="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="26"/>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="auto"/>
                    </Grid.ColumnDefinitions>

                    <Border BorderThickness="0"
                        Grid.Column="1"
                        Padding="5 0"
                        Margin="-5 0">
                        <Border.CornerRadius>
                            <CornerRadius TopLeft="{StaticResource HighlightCorerRadius}"
                                      BottomLeft="{StaticResource HighlightCorerRadius}"
                                      TopRight="0"
                                      BottomRight="0"/>
                        </Border.CornerRadius>

                        <Canvas Grid.Column="1"
                            Width="35" Height="90">
                            
                            <!--Breaker-->
                            <Line Stroke="Black" StrokeThickness="1" X1="13.5" Y1="0" X2="13.5" Y2="6"/>
                            <Ellipse Stroke="Black" StrokeThickness="1" Canvas.Left="10" Canvas.Top="6" Height="7" Width="7"/>
                            <Path Stroke="Black" StrokeThickness="1" Data="M 20,10 A 4,5 0 0 1 20, 35" />
                            <Ellipse Stroke="Black" StrokeThickness="1" Canvas.Left="10" Canvas.Top="32" Height="7" Width="7"/>
                            <Line Stroke="Black" StrokeThickness="1" X1="13.5" Y1="39" X2="13.5" Y2="45"/>

                            <!--Overload-->
                            <Border BorderThickness="1" Background="Transparent"
                            Canvas.Left="0" Canvas.Top="45" Width="27" Height="15"
                                >
                                <TextBlock Text="O/L" HorizontalAlignment="Center" VerticalAlignment="Center"
                                       Margin="0 0 0 1"/>
                            </Border>
                            <!--<Path Stroke="Black" StrokeThickness="1" Data="M 13,45 A 5,5 0 0 1 13.5, 55" />
                        <Path Stroke="Black" StrokeThickness="1" Data="M 13.5,55 A 5,5 0 0 0 14, 65" /> -->

                            <!--Contactor-->
                            <Line Stroke="Black" StrokeThickness="1" X1="13.5" Y1="60" X2="13.5" Y2="70"/>
                            <Line Stroke="Black" StrokeThickness="1" X1="4" Y1="70" X2="23" Y2="70"/>
                            <Line Stroke="Black" StrokeThickness="1" X1="4" Y1="78" X2="23" Y2="78"/>
                            <Line Stroke="Black" StrokeThickness="1" X1="13.5" Y1="78" X2="13.5" Y2="90"/>

                            <!--Reversing Contactor-->
                            <Canvas Canvas.Left="30" >
                                <Canvas.Style>
                                    <Style TargetType="Canvas">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Type}" Value="MCP_FVR">
                                                <Setter Property="Visibility" Value="Visible"/>

                                            </DataTrigger>
                                        </Style.Triggers>

                                    </Style>
                                </Canvas.Style>
                                <Line Stroke="Black" StrokeThickness="1" X1="-17" Y1="65" X2="14" Y2="65"/>
                                <Line Stroke="Black" StrokeThickness="1" X1="13.5" Y1="65" X2="13.5" Y2="70"/>
                                <Line Stroke="Black" StrokeThickness="1" X1="4" Y1="70" X2="23" Y2="70"/>
                                <Line Stroke="Black" StrokeThickness="1" X1="4" Y1="78" X2="23" Y2="78"/>
                                <Line Stroke="Black" StrokeThickness="1" X1="13.5" Y1="78" X2="13.5" Y2="85"/>
                                <Line Stroke="Black" StrokeThickness="1" X1="-17" Y1="85" X2="14" Y2="85"/>

                            </Canvas>
                        </Canvas>
                    </Border>

                    
                    <!--Data-->
                    <Border BorderThickness="0"
                            Grid.Column="2"
                        Padding="0 0 5 0"
                        Margin="5 0">
                        <Border.CornerRadius>
                            <CornerRadius TopLeft="0"
                                      BottomLeft="0"
                                      TopRight="{StaticResource HighlightCorerRadius}"
                                      BottomRight="{StaticResource HighlightCorerRadius}"/>
                        </Border.CornerRadius>

                        <Grid Grid.Column="2">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="5"/>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="7"/>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>


                            <!--Breaker Size-->
                            <StackPanel Orientation="Vertical"
                                Grid.Row="1">
                                <TextBlock Text="{Binding TripAmps, StringFormat={}{0:N0} AT}" />
                                <Border BorderBrush="Black" BorderThickness="0 0 0 1"/>
                                <TextBlock Text="{Binding FrameAmps, StringFormat={}{0:N0} AF}" />
                            </StackPanel>

                            <!--Starter Size-->
                            <StackPanel Orientation="Horizontal"
                                    Grid.Row="3">
                                <TextBlock Text="Size: "/>
                                <TextBlock Text="{Binding StarterSize}" FontWeight="SemiBold"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                </Grid>
            </Grid>

        </StackPanel>
    </DataTemplate>

