    <!--#region Templates-->

    <!-- MCC BUCKET / OCPD -->

    <!--EmptyTemplate-->
    <DataTemplate x:Key="EmptyTemplate">
        <StackPanel Orientation="Vertical">
            <Grid Background="Transparent"
                  Style="{StaticResource GraphicHighlightStyle}"
                  Visibility="Collapsed">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0"/>
                </Grid.ColumnDefinitions>
            </Grid>
        </StackPanel>
    </DataTemplate>


    <!--Breaker Template-->
    <DataTemplate x:Key="BreakerTemplate">
        <StackPanel Orientation="Vertical" >

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="{StaticResource LcsColumnWidth}"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Grid Style="{StaticResource GraphicHighlightStyle}"
                  Grid.Column="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="26"/>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="auto"/>
                    </Grid.ColumnDefinitions>


                    <Border BorderThickness="0"
                        Grid.Column="1"
                        >
                        <Border.CornerRadius>
                            <CornerRadius TopLeft="{StaticResource HighlightCorerRadius}"
                                      BottomLeft="{StaticResource HighlightCorerRadius}"
                                      TopRight="0"
                                      BottomRight="0"/>
                        </Border.CornerRadius>

                        <Canvas Grid.Column="1"
                            Width="35" Height="90">
                            <Line Stroke="Black" StrokeThickness="1" X1="13.5" Y1="0" X2="13.5" Y2="6"/>
                            <Ellipse Stroke="Black" StrokeThickness="1" Canvas.Left="10" Canvas.Top="6" Height="7" Width="7"/>
                            <Path Stroke="Black" StrokeThickness="1" Data="M 20,10 A 4,5 0 0 1 20, 35" />
                            <Ellipse Stroke="Black" StrokeThickness="1" Canvas.Left="10" Canvas.Top="32" Height="7" Width="7"/>
                            <Line Stroke="Black" StrokeThickness="1" X1="13.5" Y1="39" X2="13.5" Y2="90"/>
                        </Canvas>

                    </Border>

                    <Border BorderThickness="0"
                        Grid.Column="2"                      
                        Padding="0 0 5 0">
                        <Border.CornerRadius>
                            <CornerRadius TopLeft="0"
                                      BottomLeft="0"
                                      TopRight="{StaticResource HighlightCorerRadius}"
                                      BottomRight="{StaticResource HighlightCorerRadius}"/>
                        </Border.CornerRadius>

                        <Grid Grid.Column="2" Style="{StaticResource GraphicHighlightStyle}">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="5"/>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="27"/>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <StackPanel Orientation="Vertical"
                                Grid.Row="1">
                                <TextBlock Text="{Binding PdSizeTrip, StringFormat={}{0:N0} AT}" />
                                <Border BorderThickness="0 0 0 1"/>
                                <TextBlock Text="{Binding PdSizeFrame, StringFormat={}{0:N0} AF}" />
                            </StackPanel>
                        </Grid>
                    </Border>

                </Grid>
            </Grid>

        </StackPanel>
    </DataTemplate>

    <DataTemplate x:Key="BreakerTemplate_Bucket">
        <StackPanel Orientation="Vertical">
            <ContentControl Content="{Binding}" ContentTemplate="{StaticResource BreakerTemplate}"/>
            <SingleLineLoadGraphics:SingleLineDashedBorder/>
        </StackPanel>
    </DataTemplate>

