<UserControl x:Class="WpfUI.Controls.EdtGroupBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfUI.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             x:Name="root">
    <Grid>
        <Border BorderBrush="Black" BorderThickness="1" Margin="25 0 25 25">
            <StackPanel Orientation="Vertical"
                                    Grid.Row="1" Grid.Column="6"
                                    Background="{Binding ContentBackground, ElementName = root}"
                                    d:Background="AliceBlue">

                <TextBlock Text="Distribution Equipment"
                            Foreground="{Binding HeaderForeGround, ElementName = root}"
                            d:Foreground="White"
                            Margin="0"
                            Padding="5"
                            Background="{Binding HeaderBackground, ElementName = root}"
                           d:Background="DarkBlue"/>

                <Border BorderBrush="Black" BorderThickness="0 1 0 0">
                    <ContentPresenter />
                </Border>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
