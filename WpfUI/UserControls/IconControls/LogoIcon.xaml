<UserControl x:Class="WpfUI.UserControls.IconControls.LogoIcon"
             x:Name="root"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfUI.UserControls.IconControls"
             mc:Ignorable="d" 
             d:DesignHeight="25" d:DesignWidth="25">
    <Grid>
        <Image Source="..\..\ContentFiles\pd.png"
               UseLayoutRounding="True"
               RenderOptions.BitmapScalingMode="HighQuality"
               
               SnapsToDevicePixels="True"
               VerticalAlignment="Center"
               HorizontalAlignment="Center"
               Height="23"
               Stretch="Uniform"
               ToolTipService.InitialShowDelay="150"
               ToolTipService.BetweenShowDelay="0"/>
    </Grid>
    <!--RenderOptions.BitmapScalingMode="HighQuality"-->

</UserControl>
