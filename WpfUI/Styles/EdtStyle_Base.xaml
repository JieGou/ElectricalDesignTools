    <!--GroupBox Edt Template-->
    <Style x:Key="EdtGroupBoxTemplate" TargetType="GroupBox">
        <Setter Property="ScrollViewer.HorizontalScrollBarVisibility" Value="Auto"/>
        <Setter Property="ScrollViewer.VerticalScrollBarVisibility" Value="Auto"/>

        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="GroupBox" >
                    <Grid Background="{StaticResource Background}">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        
                        <Border Grid.Row="0"
                            BorderThickness="1"
                            BorderBrush="Black"
                            Background="{TemplateBinding Background}">
                            <Label Foreground="White"
                               FontSize="14"
                               FontWeight="Normal">
                                <ContentPresenter Margin="0"
                                              ContentSource="Header"
                                              RecognizesAccessKey="True" />
                            </Label>
                            
                        </Border>
                        
                        <Border Grid.Row="1"
                            BorderThickness="1,0,1,1"
                            BorderBrush="Black">
                            <!--<ScrollViewer Height="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType=GroupBox}, Path=ActualHeight}">-->
                                <ContentPresenter Margin="10" />

                            <!--</ScrollViewer>-->
                        </Border>

                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="{x:Type controls:EdtGroupBox}">
        <Setter Property="HeaderForeGround" Value="WhiteSmoke"/>
