            </Grid.ColumnDefinitions>
            <Border x:Name="border" Height="25" Width="25"
                    CornerRadius="{StaticResource ControlCornerRadius}"
                    
                    >
                <Viewbox Height="20">
                    <Grid x:Name="grid" >
                        <Path x:Name="unlocked" Visibility="Visible"
                                  UseLayoutRounding="True"
                                  SnapsToDevicePixels="True"
                                  RenderOptions.BitmapScalingMode="HighQuality"
                                  Fill="{StaticResource TextColorLightTheme_Black}" Data="M10 13C11.1 13 12 13.89 12 15C12 16.11 11.11 17 10 17S8 16.11 8 15 8.9 13 10 13M18 1C15.24 1 13 3.24 13 6V8H4C2.9 8 2 8.9 2 10V20C2 21.1 2.9 22 4 22H16C17.1 22 18 21.1 18 20V10C18 8.9 17.1 8 16 8H15V6C15 4.34 16.34 3 18 3S21 4.34 21 6V8H23V6C23 3.24 20.76 1 18 1M16 10V20H4V10H16Z" />
                        <Path x:Name="locked" Visibility="Hidden"
                            RenderOptions.BitmapScalingMode="HighQuality"
                            Margin="-2 0 0 0"
                            UseLayoutRounding="True"
                            SnapsToDevicePixels="True"
                              Fill="{StaticResource TextColorLightTheme_Black}" Data="M12,17C10.89,17 10,16.1 10,15C10,13.89 10.89,13 12,13A2,2 0 0,1 14,15A2,2 0 0,1 12,17M18,20V10H6V20H18M18,8A2,2 0 0,1 20,10V20A2,2 0 0,1 18,22H6C4.89,22 4,21.1 4,20V10C4,8.89 4.89,8 6,8H7V6A5,5 0 0,1 12,1A5,5 0 0,1 17,6V8H18M12,3A3,3 0 0,0 9,6V8H15V6A3,3 0 0,0 12,3Z" />

                    </Grid>
                </Viewbox>
            </Border>
        
            <ContentPresenter x:Name="contentPresenter"                            
                            Grid.Column="1" 
                            Focusable="False" 
                            HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" 
                          Margin="{TemplateBinding Padding}" 
                          RecognizesAccessKey="True" 
                          SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" 
                          VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
        </Grid>
        <ControlTemplate.Triggers>

            <Trigger Property="HasContent" Value="true">
                <Setter Property="Padding" Value="4,-1,0,0"/>
            </Trigger>

            <Trigger Property="IsMouseOver" Value="true">
                <Setter TargetName="border" Property="Background" Value="{DynamicResource ButtonColor}"/>
                <Setter Property="Cursor" Value="Hand"/>
            </Trigger>

            <Trigger Property="IsEnabled" Value="false">
            </Trigger>

            <Trigger Property="IsPressed" Value="true">
            </Trigger>

            <Trigger Property="IsChecked" Value="true">
                <Setter Property="Visibility" TargetName="unlocked" Value="Hidden"/>
                <Setter Property="Visibility" TargetName="locked" Value="Visible"/>
            </Trigger>

            <Trigger Property="IsChecked" Value="{x:Null}">
                <Setter Property="Visibility" TargetName="locked" Value="Visible"/>
                <Setter Property="Visibility" TargetName="unlocked" Value="Hidden"/>
            </Trigger>

        </ControlTemplate.Triggers>
    </ControlTemplate>
    
    
</ResourceDictionary>