<Window x:Class="WpfUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfUI"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        xmlns:viewmodels="clr-namespace:WpfUI.ViewModels"
        xmlns:views="clr-namespace:WpfUI.Views"
        mc:Ignorable="d"
        Title="Electrical Design Tools"
        d:Width="1600" d:Height="950"
        Background="white"
        WindowState="Maximized">

    <!--<Window.DataContext>
        <viewmodels:MainViewModel/>
    </Window.DataContext>-->

    <Window.Resources>

        <SolidColorBrush x:Key="MenuBackGround">#FF3A3838</SolidColorBrush>
        
        <Style TargetType="Button" BasedOn="{StaticResource BaseButtonStyle}">
            <Setter Property="Background" Value="DarkGray"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="FontFamily" Value="Calibri"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>

        <sys:Int32 x:Key="button1">1</sys:Int32>

        <sys:Int32 x:Key="menuRow">0</sys:Int32>
        <sys:Int32 x:Key="contentRow">2</sys:Int32>

    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Menu Grid.Row="0" Grid.Column="0"
              Grid.ColumnSpan="2">
            <MenuItem Header="_File">
                <MenuItem Header="_New" />
                <MenuItem Header="_Open" />
                <MenuItem Header="_Save" />
                <Separator />
                <MenuItem Header="_Exit" />
            </MenuItem>
        </Menu>

        <Grid Grid.Row="1">
           
            <StackPanel Orientation="Horizontal" 
                        Grid.Row="{StaticResource menuRow}" 
                        Background="white"
                        Margin=" 0 5 0 5">
                
               <TextBlock Text="MENU"
                          Grid.Column="1"  
                          FontSize="24" FontWeight="Bold"
                          Foreground="black"
                          Margin="15,0,50,5"/> 
                
                <Button VerticalAlignment="Top"
                        x:Name="btnStartup"
                        Content="STARTUP"
                        Command="{Binding NavigateStartupCommand}"/>

                <Button VerticalAlignment="Top"
                        x:Name="btnProjectSettings"
                        Content="PROJECT SETTINGS"
                        Command="{Binding NavigateProjectSettingsCommand}"/>

                <Button VerticalAlignment="Top"
                        x:Name="btnLoadList"
                        Content="LOCATIONS"
                        Command="{Binding NavigateLocationsCommand}"/>
                
                <Button VerticalAlignment="Top"
                        x:Name="btnDteq"
                        Content="LOAD DISTRIBUTION"
                        Command="{Binding NavigateEquipmentCommand}"/>

                <Button  VerticalAlignment="Top"
                    x:Name="btnCableList"
                    Content="CABLE LIST"
                    Command="{Binding NavigateCableListCommand}"/>
                
                <Button  VerticalAlignment="Top"
                    x:Name="btnDataTables"
                    Content="DATA TABLES"
                    Command="{Binding NavigateDataTablesCommand}"/>
                
            </StackPanel>
        </Grid>

        <!--Conten Control-->
        <ContentControl x:Name="ccMain"
                        Grid.Row="2" Grid.Column="0"
                        Grid.RowSpan="1"
                        Content="{Binding CurrentViewModel}"
                        BorderBrush="Black"
                        BorderThickness="2">

            <ContentControl.Resources>

                <DataTemplate DataType="{x:Type viewmodels:StartupViewModel}">
                    <views:StartupView/>
                </DataTemplate>

                <DataTemplate DataType="{x:Type viewmodels:ProjectSettingsViewModel}">
                    <views:ProjectSettingsView/>
                </DataTemplate>

                <DataTemplate DataType="{x:Type viewmodels:LocationsViewModel}">
                    <views:LocationsView/>
                </DataTemplate>
                
                <DataTemplate DataType="{x:Type viewmodels:EquipmentViewModel}">
                    <views:EquipmentView/>
                </DataTemplate>

                <DataTemplate DataType="{x:Type viewmodels:CableListViewModel}">
                    <views:CableListView/>
                </DataTemplate>


                <DataTemplate DataType="{x:Type viewmodels:DataTablesViewModel}">
                    <views:DataTablesView/>
                </DataTemplate>


            </ContentControl.Resources>
            
        </ContentControl>
    </Grid>

</Window>
