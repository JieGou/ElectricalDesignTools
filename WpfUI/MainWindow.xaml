<Window x:Class="WpfUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfUI"
        mc:Ignorable="d"
        Title="MainWindow" Width="1642" Height="900"
        Padding=" 10 10 10 10">
    <Window.Resources>
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <StackPanel Orientation="Horizontal" Margin="10,10,10,10">
            <StackPanel Orientation="Vertical">
                
                <Button Name ="addDtOC" Content="Add Dteq to OC" Height="27" Margin="10,18,10,0" Width="125" Click="addDteqOC_Click"/>
                <Button Name ="addLoad" Content="Add to OC" Height="27" Margin="10,18,10,0" Width="125" Click="addLoad_Click"/>
                <Button Name ="ShowDteqOC" Content="Show Dteq" Height="27" Margin="10,18,10,0" Width="125" Click="SDOC_Click"/>
                <Button Name ="ShowLoadsOC" Content="Show Loads" Height="27" Margin="10,18,10,0" Width="125" Click="SLOC_Click"/>
                <Button Name ="ChangeLoadOC" Content="Change Load" Height="27" Margin="10,18,10,0" Width="125" Click="CLOC_Click"/>
                <StackPanel Height=" 300">
                    
                </StackPanel>

                
                <Button Name ="addDtOLM" Content="Add Dteq to LM" Height="27" Margin="10,18,10,0" Width="125" Click="addDteqLM_Click"/>
                <Button Name ="addLM" Content="Add to LM" Height="27" Margin="10,18,10,0" Width="125" Click="addLM_Click"/>
                <Button Name ="ShowDteqLM" Content="Show LM Dteq" Height="27" Margin="10,18,10,0" Width="125" Click="SDLM_Click"/>
                <Button Name ="ShowLoadsLM" Content="Show LM Loads" Height="27" Margin="10,18,10,0" Width="125" Click="SLLM_Click"/>
                <Button Name ="ChangeLoadLM" Content="Change Load" Height="27" Margin="10,18,10,0" Width="125" Click="CLLM_Click"/>

            </StackPanel>
            <StackPanel Width="25"></StackPanel>

            <StackPanel Orientation="Vertical">

                

                <DataGrid x:Name="dgdDteqOC" HorizontalAlignment="Left" Height="212" Width="1216" 
                          AutoGeneratingColumn="OnAutoGeneratingColumn"
                          Margin=" 10 10 10 10">
                    <DataGrid.Resources>
                        <SolidColorBrush x:Key="{x:Static SystemColors.HighlightBrushKey}" 
                   Color="#11aaff"/>
                    </DataGrid.Resources>
                </DataGrid>
                
                 <DataGrid x:Name="dgdLoadsOC" 
                          HorizontalAlignment="Left" Width="1216" 
                          Height="172" 
                          ItemsSource="{Binding}"                       
                          AutoGeneratingColumn="OnAutoGeneratingColumn"
                          Margin=" 10 10 10 10">
                </DataGrid>
                
                <DataGrid x:Name="dgdDteqLM" HorizontalAlignment="Left" Height="212" Width="1216" 
                          AutoGeneratingColumn="OnAutoGeneratingColumn"
                          Margin=" 10 10 10 10">
                    <DataGrid.Resources>
                        <SolidColorBrush x:Key="{x:Static SystemColors.HighlightBrushKey}"
                                         Color="#11aaff"/>
                    </DataGrid.Resources>
                </DataGrid>

               

                <DataGrid x:Name="dgdLoadsLM" HorizontalAlignment="Left" Height="172" 
                            Width="1216" 
                            AutoGeneratingColumn="OnAutoGeneratingColumn"
                          Margin=" 10 10 10 10">
                </DataGrid>

            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
