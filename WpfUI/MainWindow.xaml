<Window x:Class="WpfUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfUI"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        
        xmlns:syncfusion="http://schemas.syncfusion.com/wpf" 
        
        xmlns:viewmodels="clr-namespace:WpfUI.ViewModels"
        xmlns:views="clr-namespace:WpfUI.Views"
        mc:Ignorable="d"
        Title="Electrical Design Tools"
        d:Width="1600" d:Height="950"
        Background="white"
        WindowState="Maximized" 
                         
        xmlns:syncfusionskin="clr-namespace:Syncfusion.SfSkinManager;assembly=Syncfusion.SfSkinManager.WPF"
        syncfusionskin:SfSkinManager.VisualStyle="Office2016White" 
        Focusable="True"
        PreviewKeyDown="Window_PreviewKeyDown"  > 
        


    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Styles/SettingsStyle_Base.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        <SolidColorBrush x:Key="MenuBackGround">#FF3A3838</SolidColorBrush>

            <Style TargetType="Button" >
                <Setter Property="FontSize" Value="14"/>
                <Setter Property="FontWeight" Value="Normal"/>
                <Setter Property="Foreground" Value="Black"/>
                <Setter Property="Background" Value="White"/>
                <Setter Property="BorderThickness" Value="0"/>
                <Setter Property="MinHeight" Value="25"/>
                <Setter Property="Margin" Value="5 0"/>
            </Style>

            <sys:Int32 x:Key="button1">1</sys:Int32>
        <sys:Int32 x:Key="menuRow">0</sys:Int32>
        <sys:Int32 x:Key="contentRow">2</sys:Int32>
        </ResourceDictionary>

    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!--<syncfusion:Ribbon x:Name="_ribbon" VerticalAlignment="Top">
            <syncfusion:RibbonTab Caption="HOME"  IsChecked="True"/>
            <syncfusion:RibbonTab Caption="PROJECT SETTINGS"  IsChecked="False"/>
            <syncfusion:RibbonTab Caption="ELECTRICAL"  IsChecked="False"/>
            <syncfusion:RibbonTab Caption="INSTRUMENTATION"  IsChecked="False"/>
        </syncfusion:Ribbon>-->


        <!--<Menu Grid.Row="0" Grid.Column="0"
              Grid.ColumnSpan="2">
            <MenuItem Header="_File">
                <MenuItem Header="_New" />
                <MenuItem Header="_Open" />
                <MenuItem Header="_Save" />
                <Separator />
                <MenuItem Header="_Exit" />
            </MenuItem>
        </Menu>-->

        <Grid Grid.Row="1">
            <!--<StackPanel Orientation="Horizontal" 
                        Grid.Row="{StaticResource menuRow}" 
                        Background="white"
                        Margin=" 0 0 0 0" > -->

            <Border BorderBrush="Black"
                    BorderThickness="0">
            <WrapPanel Orientation="Horizontal" 
                            Grid.Row="{StaticResource menuRow}" 
                            Background="white"
                            Margin=" 0 0 0 0">

                <TextBlock Text="MENU"
                           Width="150"
                           Grid.Column="1"  
                           FontSize="20" FontWeight="Bold"
                           Foreground="black"
                           VerticalAlignment="Top"
                           Margin="50,-3,10,0"/>

                <RadioButton Content="HOME"
                             Style="{StaticResource MainMenuButton}" 
                             GroupName="menu"
                             VerticalAlignment="Top"  
                            Command="{Binding NavigateStartupCommand}"
                            Margin="15 0 0 0"/>

                <!--Style="{StaticResource MainMenuButton}"-->

                <!--Style="{StaticResource {x:Type ToggleButton}}"-->

                <RadioButton Content="PROJECT SETTINGS"
                             GroupName="menu"
                             MinWidth="120"
                             Style="{StaticResource MainMenuButton}" 
                             VerticalAlignment="Top"
                             Command="{Binding NavigateSettingsCommand}"/>

                <RadioButton VerticalAlignment="Top"
                             Content="AREAS"
                             GroupName="menu"
                             Style="{StaticResource MainMenuButton}"
                             Command="{Binding NavigateAreasCommand}"/>

                <RadioButton Content="ELECTRICAL"
                             GroupName="menu"
                             Style="{StaticResource MainMenuButton}"
                             VerticalAlignment="Top"
                             Command="{Binding NavigateElectricalCommand}"/>

                <RadioButton Content="INSTRUMENTATION"
                             GroupName="menu"
                             Width="120"
                             Style="{StaticResource MainMenuButton}"
                             VerticalAlignment="Top"
                             Command="{Binding NavigateElectricalCommand}"/>

                <RadioButton Content="CABLE &amp; TRAY"
                             GroupName="menu"
                             Style="{StaticResource MainMenuButton}"
                             VerticalAlignment="Top"
                             Command="{Binding NavigateCableListCommand}"/>

                <!--<Button x:Name="btnAutocad" Content="AUTOCAD"
                            VerticalAlignment="Top"
                            Command="{Binding NavigateElectricalCommand}"/>-->

                <RadioButton Content="DATA TABLES"
                             GroupName="menu"
                             Style="{StaticResource MainMenuButton}"
                             VerticalAlignment="Top"                        
                             Command="{Binding NavigateDataTablesCommand}"/>

                <Button x:Name="btnExport" Content="IMPORT / EXPORT"
                            VerticalAlignment="Top"                        
                            Command="{Binding ExportCommand}"
                            FontSize="12"
                        Width="110"/>

                <Button x:Name="btnWindow" Content="EXTRA WINDOW"
                            VerticalAlignment="Top"
                            HorizontalAlignment="Right"
                            Command="{Binding ScenarioCommand}"
                            Margin="50 0 0 0"
                            Width="110"
                            FontSize="12"/>


                </WrapPanel>
            </Border>
            <!--</StackPanel>-->

        </Grid>

        <!--Conten Control-->

        <TextBlock  Grid.Row="2"
                    Text="Electrical Design Tools"
                    HorizontalAlignment="center"
                    FontSize="30"
                    Margin=" 0 100 0 0"/>

        <Image x:Name="logo"
               Source="Resources/pd.png"
               Grid.Row="2" 
               Width="350"
               HorizontalAlignment="Center"
               VerticalAlignment="Center"
               Margin="0 0 0 150">
            <Image.Triggers>
                <EventTrigger RoutedEvent="Image.Loaded">
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation Storyboard.TargetName="logo"
                                Storyboard.TargetProperty="Opacity"
                                From="0" To="1" Duration="0:0:0.75"
                                AutoReverse="False" RepeatBehavior="1x"/>

                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </Image.Triggers>
        </Image>
        
        <ContentControl x:Name="ccMain"
                        Grid.Row="2" Grid.Column="0"
                        Grid.RowSpan="1"
                        Content="{Binding CurrentViewModel}"
                        BorderBrush="Black"
                        BorderThickness="2">

            <ContentControl.Resources>

                <DataTemplate DataType="{x:Type viewmodels:HomeViewModel}">
                    <views:HomeView/>
                </DataTemplate>

                <DataTemplate DataType="{x:Type viewmodels:SettingsViewModel}">
                    <views:SettingsView/>
                </DataTemplate>

                <DataTemplate DataType="{x:Type viewmodels:AreasViewModel}">
                    <views:AreasView/>
                </DataTemplate>
                
                <DataTemplate DataType="{x:Type viewmodels:ElectricalViewModel}">
                    <views:ElectricalView/>
                </DataTemplate>

                <DataTemplate DataType="{x:Type viewmodels:CableListViewModel}">
                    <views:CableListView/>
                </DataTemplate>


                <DataTemplate DataType="{x:Type viewmodels:DataTablesViewModel}">
                    <views:DataTablesView/>
                </DataTemplate>


            </ContentControl.Resources>
            
        </ContentControl>
    </Grid>

</Window>
